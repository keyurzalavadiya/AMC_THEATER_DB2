@using AMC_THEATER_1.Models
@model AMC_THEATER_1.Models.TheaterViewModel

@{
    ViewBag.Title = "Print_Application";
    var uploadedDocs = ViewBag.UploadedDocs as List<UploadedDocViewModel> ?? new List<UploadedDocViewModel>();

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Theater Registration Application</title>
    <style>
        /* General Styling */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .container {
            width: 100%;
            max-width: 1100px; /* Ensures it fits within a standard layout */
            margin: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: left;
        }

        input[type="text"],
        input[type="email"],
        input[type="number"],
        input[type="date"],
        input[type="file"] {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        .submit-btn, .print-btn {
            margin-top: 15px;
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }

            .submit-btn:hover, .print-btn:hover {
                background-color: #0056b3;
            }

        /* Table Layout */
        .table-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

            .table-container table:first-child {
                width: 49.3%; /* Ensures alignment with the main table */
            }

            .table-container table:last-child {
                width: 51%; /* Adjusted to align better */
            }

        /* Print-Specific Styles */
        @@media print {
            body, html {
                height: 100%;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .container {
                width: 100%;
                max-width: 800px; /* Ensures it fits within an A4 width */
                margin: auto;
                text-align: center;
                position: relative;
            }

            .table-container {
                display: flex;
                justify-content: space-between;
                width: 100%;
            }

                .table-container table:first-child {
                    width: 49.3%; /* Ensures print formatting fits within A4 */
                }

                .table-container table:last-child {
                    width: 51%; /* Adjusted for print layout */
                }

            th, td {
                border: 1px solid black;
                padding: 2px; /* Reduced padding for better print fit */
                font-size: 12px; /* Reduce font size to save space */
            }

            table {
                width: 100%; /* Ensure tables use available width */
            }

            .submit-btn, .print-btn {
                display: none; /* Hide buttons when printing */
            }
        }
    </style>



    <script>
        function printApplication() {
            window.print();
        }
    </script>
</head>
<body>
    <div class="container">
        <div style="display: flex; align-items: center; margin-bottom:20px;">
            <a href="https://ahmedabadcity.gov.in/" target="_blank">
                <img src="~/Img/amc-logo.png" alt="AMC Logo" width="70">
            </a>
            <h4 style="margin-left: 10px;">Ahmedabad Municipal Corporation</h4>
            <h4 class="te">Theater Tax</h4>
        </div>

        <table>
            <tr>
                <th>Application No</th>
                <td colspan="2"><input type="text" name="application_no" value=" @Model.ApplId"></td>
                <th>Application Date</th>
                <td><input type="text" name="contact_no" value="@(Model.CreateDate?.ToString("dd-MM-yyyy"))"></td>
            </tr>
            <tr>
                <th>Theater Name</th>
                <td colspan="2"><input type="text" name="theater_name" value="@Model.T_NAME"></td>
                <th>License Holder’s Name</th>
                <td><input type="text" name="license_holder" value="@Model.ManagerName"></td>
            </tr>
            <tr>
                <th>Address</th>
                <td colspan="2"><input type="text" name="address" value="@Model.T_ADDRESS"></td>
                <th>Representatives’ Name</th>
                <td><input type="text" name="representative_name" value="@Model.ManagerName"></td>
            </tr>
            <tr>
                <th rowspan="2">Contact Details</th>
                <th>Contact No.</th>
                <td colspan="3"><input type="text" name="contact_no" value="@Model.T_OWNER_NUMBER"></td>
            </tr>
            <tr>
                <th>Email ID</th>
                <td colspan="3"><input type="email" name="email" value="@Model.T_OWNER_EMAIL"></td>
            </tr>
            <tr>
                <th>Commencement Date</th>
                <td colspan="2"><input type="text" name="contact_no" value="@(Model.T_COMMENCEMENT_DATE?.ToString("dd-MM-yyyy"))"></td>
                <th>License Date</th>
                <td><input type="text" name="contact_no" value="@(Model.LicenseDate?.ToString("dd-MM-yyyy"))"></td>
            </tr>
            <tr>
                <th>Zone</th>
                <td colspan="2"><input type="text" name="zone" value="@Model.T_ZONE"></td>
                <th>Ward</th>
                <td colspan="2"><input type="text" name="zone" value="@Model.T_WARD"></td>
            </tr>
            <tr>
                <th>Tenement Nos.</th>
                <td colspan="2"><input type="text" name="tenement_no" value="@Model.T_TENAMENT_NO"></td>
                <th>PEC/PRC No.</th>
                <td><input type="text" name="pec_prc_no" value="@Model.T_PEC_NO,@Model.T_PRC_NO"></td>
            </tr>
        </table>

        <div class="table-container">
            <table>
                <tr>
                    <th>Screen No.</th>
                    <th>Type</th>
                    <th>Seat Capacity</th>
                </tr>

                @foreach (var screen in Model.Screens)
                {
                    <tr>
                        <td>@screen.ScreenNo</td>
                        <td>@screen.ScreenType</td>
                        <td>@screen.AudienceCapacity</td>
                    </tr>
                }
            </table>


            @if (uploadedDocs.Any()) // Using Any() instead of Count > 0 for better performance
            {
                <table>
                    <tr>
                        <th>Uploaded Documents</th>
                    </tr>
                    <tbody>
                        @foreach (var doc in uploadedDocs)
                        {
                            <tr>
                                <td>@doc.DocName</td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
        <button class="print-btn" onclick="printApplication()">Print</button>
        <button type="button" class="btn btn-secondary" onclick="window.location.href='List_of_Application.cshtml'">Back</button>
    </div>
</body>
</html>
<script>
    function makeFieldsReadOnly() {
        let inputs = document.querySelectorAll("input");
        inputs.forEach(input => {
            input.setAttribute("readonly", true);
        });
    }

    window.onload = makeFieldsReadOnly; // Call function when page loads
</script>



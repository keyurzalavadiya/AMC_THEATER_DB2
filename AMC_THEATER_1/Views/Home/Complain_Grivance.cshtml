@{
    ViewBag.Title = "Complain_Grivance";
    ViewBag.ShowBasicNavbar = false;
    ViewBag.ShowHomeIcon = true;
    ViewBag.Module = true;
    ViewBag.ShowNavbar = true;
    ViewBag.ShowSideBar = true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint / Grievance</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        .container {
            margin-left: 200px;
            max-width: 80%;
            padding: 15px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card shadow-lg p-4 w-100">
            <h3 class="text-center mb-4 bg-light p-3">Complaint / Grievance and Query</h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
            }

            <form asp-action="SubmitComplaint" asp-controller="Home" method="post" enctype="multipart/form-data">
                <div class="col-md-12 text-start">
                    <label for="comments" class="form-label fw-bold">Enter Any Complaint / Grievance / Query :</label>
                    <textarea class="form-control" id="comments" name="complaint" rows="7" placeholder="Enter your comments..." style="max-width:100%;"required></textarea>
                </div>

                <div class="col-md-12 text-start mt-3">
                    <label for="document" class="form-label fw-bold">Upload Supporting Document :</label>
                    <input type="file" id="document" name="documentFile" class="form-control" accept=".pdf,.doc,.docx,.jpg,.png" style="max-width:100%;"/>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <button type="reset" class="btn btn-danger">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
